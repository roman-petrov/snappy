{
  "name": "snappy-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for Snappy Telegram bot and related packages",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter snappy dev",
    "start": "bun run --filter snappy start",
    "format": "prettier --write \"packages/**/src/**/*.{ts,js,json,md}\" \"*.{md,json,js}\"",
    "format:check": "prettier --check \"packages/**/src/**/*.{ts,js,json,md}\" \"*.{md,json,js}\"",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check \"packages/**/src/**/*.{ts,js,json,md}\" \"*.{md,json,js}\"",
    "lint:cspell": "cspell \"**/*.{ts,md,json,js}\" --no-progress --config cspell.config.js",
    "lint:jscpd": "jscpd packages/*/src",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore node_modules",
    "ci": "bun run lint:tsc && bun run lint:eslint && bun run lint:prettier && bun run lint:cspell && bun run lint:jscpd && bun run lint:markdown"
  },
  "keywords": [
    "monorepo",
    "telegram",
    "bot",
    "content",
    "ai",
    "gigachat"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "cspell": "^8.3.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jscpd": "^4.0.5",
    "markdownlint-cli": "^0.39.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
